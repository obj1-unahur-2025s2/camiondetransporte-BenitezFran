import camion2.*
import cosas2.*

describe "Algunos test para camion" {

// INICIALIZAMOS CON UN VALOR POR DEFECTO PARA TODOS LOS TEST
  method initialize(){
    camion.cargar(knightRider)
    arena.peso(200)
    camion.cargar(arena)
    ladrillos.cantidad(10)
    camion.cargar(ladrillos)
  }

  test "El camion tiene un peso total de 1720" {
    assert.equals(1720, camion.pesoTotal())
  }
  test "camion puede circular" {
    assert.that(camion.puedeCircular(10))
  }

}